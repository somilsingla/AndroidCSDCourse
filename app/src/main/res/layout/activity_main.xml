<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidcsdcourse.MainActivity">


    <fragment
        android:id="@+id/fragment"
        android:name="com.example.androidcsdcourse.fragments.BlankFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="219dp" />


    <LinearLayout
        android:background="@drawable/menu_background"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_weight="1"
            android:id="@+id/facebook1"
            android:src="@drawable/facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:layout_weight="1"
            android:id="@+id/twitter"
            android:src="@drawable/twitter"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/facebook2"
            android:src="@drawable/facebook"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <Button
        android:id="@+id/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Start Service" />

    <Button
        android:id="@+id/stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignEnd="@+id/start_service"
        android:layout_marginBottom="37dp"
        android:text="Stop Service" />
</RelativeLayout>
